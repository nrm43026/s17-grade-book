<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matth.gradebook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoursesActivity"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddEditDeleteCourseActivity"
            android:label="@string/title_activity_add_edit_delete_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseAssignmentActivity"
            android:label="@string/title_activity_course_assignment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddEditDeleteAssignmentActivity"
            android:label="@string/title_activity_add_edit_delete_assignment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.ImportActivity"
            android:label="@string/title_activity_import"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".settings.ClearActivity"
            android:label="@string/title_activity_clear"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>